{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "require-jsdoc": "off"
    },
    "ignorePatterns": [
        "dist/",
        "assets/",
        "node_modules/",
        "test/coverage/",
        "docs/",
        "samples/"
    ]
}